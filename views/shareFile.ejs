<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./customer/partials/head.ejs') %>
        <link rel="stylesheet" href="/login.css">
   </head>
<body style="align-content: center;width: 100%;" >
    <div class="container1" style="margin: 0;" >
        <% if(result_files) {%>
        <% result_files.forEach( file => {   %>
        <div class="left">
        <div class="logo">
            <!-- <img src="/logo.jpg" alt="logo" srcset=""> -->
            <object width="" data="/<%= file.fileName %>" type="" id="filePreview"  ></object>
          <style>
 object{
    width: 100%;
    height: 550px;
  

}


.container1{
display: flex;
flex-direction: row;
justify-content: space-evenly;

}



@media screen and (max-width:900px){
    object{
        height: 400px;
    }

    .container1{
        flex-direction: column;
    }
}
      </style>
        </div>
        </div>
        <div class="right">
        <div class="form-container">
            <div class="header-title">
                <h3>Share file from here</h3>
                <p> 
                    <span>Share to multiple account? space them with comma</span>
                </p>
                
            </div>
            <form action="/send/file" method="post" enctype="multipart/form-data" class="form">
               <input type="text" name="fileId" id="fileId" value="<%= file.fileId %>" style="display: none;" >
                <div class="input-box">
                    <label for="email"> Email </label>
                    <input type="email" multiple name="email" id="email" class="email">
                    <span class="error" id="error_email">
                        <i id="email_err__msg"> </i>
                    </span>
                </div>
                <div class="input-box">
                <label for="Subject"> Subject </label>
                <textarea name="subject" id="subject"   rows="10"></textarea>                
                <span class="error" id="error_password">
                        <i id="pass_err__msg">Word length must be more than 8</i>
                    </span>
                 </div>
         
                </div>
                <div  id="input-box-submit">
                    <input type="submit" style="padding: 9px 13px;" value="Send" id="submit-btn" class="submit-btn">
                    
                </div>
            </form>
        </div>
        </div>
        <% }); }%>
    </div>
</body>
</html>